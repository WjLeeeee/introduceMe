<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myimage" />

    <TextView
        android:id="@+id/t_id"
        style="@style/Information"
        android:layout_marginTop="30dp"
        android:text="@string/home_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/call_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myImage" />

    <TextView
        android:id="@+id/call_id"
        style="@style/Information"
        android:text="받아올 아이디"
        app:layout_constraintBottom_toBottomOf="@+id/t_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/t_id"
        app:layout_constraintTop_toTopOf="@+id/t_id" />

    <TextView
        android:id="@+id/t_name"
        style="@style/Information"
        android:layout_marginTop="30dp"
        android:text="@string/home_name"
        app:layout_constraintEnd_toEndOf="@+id/t_id"
        app:layout_constraintEnd_toStartOf="@+id/call_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_id" />

    <TextView
        android:id="@+id/call_name"
        style="@style/Information"
        android:text="받아올 이름"
        app:layout_constraintBottom_toBottomOf="@+id/t_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/t_name"
        app:layout_constraintTop_toTopOf="@+id/t_name" />

    <TextView
        android:id="@+id/t_age"
        style="@style/Information"
        android:layout_marginTop="170dp"
        android:text="@string/home_age"
        app:layout_constraintEnd_toEndOf="@+id/myImage"
        app:layout_constraintStart_toStartOf="@+id/myImage"
        app:layout_constraintTop_toBottomOf="@+id/myImage" />

    <TextView
        android:id="@+id/t_mbti"
        style="@style/Information"
        android:layout_marginTop="30dp"
        android:text="@string/home_mbti"
        app:layout_constraintEnd_toEndOf="@+id/t_age"
        app:layout_constraintStart_toStartOf="@+id/t_age"
        app:layout_constraintTop_toBottomOf="@+id/t_age" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_btn"
        app:layout_constraintEnd_toEndOf="@+id/t_mbti"
        app:layout_constraintStart_toStartOf="@+id/t_mbti"
        app:layout_constraintTop_toBottomOf="@+id/t_mbti">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/home_finish_btn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@drawable/selector_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>